@model NotifyX.Models.Usuario

@{
    ViewData["Title"] = "Details";
}

<link rel="stylesheet" href="~/css/client_theme.css" />

<div class="container">
    <h1>Detalhes do Usuário</h1>
    <hr />

    <div class="details-container">
        <dl class="details-list">
            <dt>Nome:</dt>
            <dd>@Html.DisplayFor(model => model.Nome)</dd>

            <dt>Email:</dt>
            <dd>@Html.DisplayFor(model => model.Email)</dd>

            <dt>Telefone:</dt>
            <dd>@Html.DisplayFor(model => model.Telefone)</dd>
        </dl>

        <div class="details-actions">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="action-button">Editar</a>
            <a asp-action="Index" class="action-button action-secondary">Voltar à Lista</a>
        </div>
    </div>
</div>
