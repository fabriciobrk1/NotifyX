@model IEnumerable<NotifyX.Models.Usuario>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/client_theme.css" />

<h1>Clientes</h1>

<p>
    <a asp-action="Create" class="action-button">Cadastrar cliente</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Telefone)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Telefone)</td>
                <td class="action-buttons">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="action-button">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="action-button">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="action-button action-delete">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
