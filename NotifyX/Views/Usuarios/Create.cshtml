@model NotifyX.Models.Usuario

@{
    ViewData["Title"] = "Create";
}

<link rel="stylesheet" href="~/css/client_theme.css" />

<div class="container">
    <h1>Criar Usuário</h1>
    <hr />

    <form asp-action="Create" class="create-form">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control rounded-input" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control rounded-input" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Telefone" class="control-label"></label>
            <input asp-for="Telefone" class="form-control rounded-input" />
            <span asp-validation-for="Telefone" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="action-button">Criar</button>
            <a asp-action="Index" class="action-button action-secondary">Voltar à Lista</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
