@model NotifyX.Models.Usuario

@{
    ViewData["Title"] = "Delete";
}

<link rel="stylesheet" href="~/css/client_theme.css" />

<div class="container">
    <h1>Excluir Usuário</h1>
    <hr />

    <div class="delete-container">
        <h3 class="delete-warning">Tem certeza que deseja excluir este usuário?</h3>

        <dl class="details-list">
            <dt>Nome:</dt>
            <dd>@Html.DisplayFor(model => model.Nome)</dd>

            <dt>Email:</dt>
            <dd>@Html.DisplayFor(model => model.Email)</dd>

            <dt>Telefone:</dt>
            <dd>@Html.DisplayFor(model => model.Telefone)</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="delete-actions">
                <button type="submit" class="action-button action-delete">Excluir</button>
                <a asp-action="Index" class="action-button action-secondary">Voltar à Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
